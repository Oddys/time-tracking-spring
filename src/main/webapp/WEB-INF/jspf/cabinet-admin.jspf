<html>
<head>
</head>
<body>
    <h3><fmt:message key="title.user.add"/> </h3>
    <form action="controller">
        <input type="hidden" name="command" value="forward"/>
        <input type="hidden" name="targetPage" value="/WEB-INF/pages/user-data.jsp"/>
        <input type="submit" value="<fmt:message key="button.add"/>"/>
    </form>
    <h3><fmt:message key="activity.all"/></h3>
    <form action="show-activities">
        <input type="hidden" name="currentPage" value="0"/>
        <input type="hidden" name="rowsPerPage" value="5"/>
        <input type="submit" value="<fmt:message key="button.show"/>"/>
    </form>
    <h3><fmt:message key="activity.requests"/></h3>
    <form action="controller">
        <input type="hidden" name="command" value="show_activity_requests"/>
        <input type="hidden" name="currentPage" value="1"/>
        <input type="hidden" name="rowsPerPage" value="5"/>
        <input type="submit" value="<fmt:message key="button.show"/>"/>
    </form>
    <h3><fmt:message key="user.find"/></h3>
    <form action="controller">
        <input type="hidden" name="command" value="find_user"/>
        <fmt:message key="user.lastname"/>:
        <input type="text" name="lastName" value="" required
               oninvalid="this.setCustomValidity('<fmt:message key="user.search.error.nolastname"/>')"
               oninput="setCustomValidity('')"/>
        <input type="submit" value="<fmt:message key="button.search"/>"/>
    </form>
</body>
</html>

<html>
<head>
</head>
<body>
    <form action="signin" method="post">
        <c:if test="${not empty messageKey}">
            <fmt:message key="${messageKey}"/>
            <c:set var="messageKey" value="" scope="session"/>
        </c:if><br/>
        <input type="hidden" name="command" value="signin"/>
        <fmt:message key="auth.login"/><br/>
        <input type="text" name="login" value="" required
               oninvalid="this.setCustomValidity('<fmt:message key="auth.error.nologin"/>')"
               oninput="setCustomValidity('')"/><br/>
        <fmt:message key="auth.password"/><br/>
        <input type="password" name="password" value="" required
               oninvalid="this.setCustomValidity('<fmt:message key="auth.error.nopassword"/>')"
               oninput="setCustomValidity('')"/><br/>
        <input type="submit" value="<fmt:message key="button.signin"/>"/>
    </form>
</body>
</html>
